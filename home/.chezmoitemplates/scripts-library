# shellcheck shell=bash

# https://github.com/felipecrs/dotfiles/blob/master/home/.chezmoitemplates/scripts-library
set -eufo pipefail

if [[ -n "${DOTFILES_DEBUG:-}" ]]; then
    set -x
fi

function ensure_path_entry() {
    local entries=("$@")

    for entry in "${entries[@]}"; do
        if [[ ":${PATH}:" != *":${entry}:"* ]]; then
            export PATH="${entry}:${PATH}"
        fi
    done
}

function log_color() {
    local color_code="$1"
    shift

    printf "\033[${color_code}m%s\033[0m\n" "$*" >&2
}

function log_red() {
    log_color "1;31" "$@"
}

function log_blue() {
    log_color "1;34" "$@"
}

function log_green() {
    log_color "1;32" "$@"
}

function log_yellow() {
    log_color "1;33" "$@"
}

function log_task() {
    log_blue "üîÉ" "$@"
}

function log_c() {
    log_yellow "üëâ" "$@"
}

function c() {
    log_c "$@"
    "$@"
}

function c_exec() {
    log_c "$@"
    exec "$@"
}

function log_error() {
    log_red "‚ùå" "$@"
}

function log_info() {
    log_blue "‚ÑπÔ∏è" "$@"
}

function log_success() {
    log_green "‚úÖ" "$@"
}

function log_warning() {
    log_yellow "‚ö†Ô∏è" "$@"
}

function error() {
    log_error "$@"
    exit 1
}

function print_running_file() {
    log_task "Running $(basename "${0}") :: $@"
}
